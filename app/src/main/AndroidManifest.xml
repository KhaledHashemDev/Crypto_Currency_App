<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.crypto_currency_app">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="com.example.crypto_currency_app.CoinApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Crypto_Currency_App"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Crypto_Currency_App"
    >
        <activity
           android:name="com.example.crypto_currency_app.MainActivity"
            android:exported="true"
            android:label="Crypto_Currency_App"
            android:theme="@style/splashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>